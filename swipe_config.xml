<?xml version='1.0' encoding='utf-8'?>
<widget id="com.game.killthesnake" version="2.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kill The Snake</name>
    <description>
        The new version of well-known classic snake game
    </description>
    <author email="killthesnakegame@gmail.com" href="">
        5!
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="Orientation" value="sensorPortrait" />
        <icon src="res/icons/android/swipe/ldpi.png" density="ldpi" />
        <icon src="res/icons/android/swipe/mdpi.png" density="mdpi" />
        <icon src="res/icons/android/swipe/hdpi.png" density="hdpi" />
        <icon src="res/icons/android/swipe/xhdpi.png" density="xhdpi" />
        <splash src="res/icons/android/swipe/ldpi.9.png" density="ldpi" />
        <splash src="res/icons/android/swipe/mdpi.9.png" density="mdpi" />
        <splash src="res/icons/android/swipe/hdpi.9.png" density="hdpi" />
        <splash src="res/icons/android/swipe/xhdpi.9.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="30000" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
